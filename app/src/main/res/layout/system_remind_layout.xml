<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <com.example.cpu11341_local.talktvhome.myview.TalkTextView
        android:gravity="center_horizontal"
        android:id="@+id/textViewDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="17/08/25 09:47"
        android:layout_margin="10dp"/>

    <RelativeLayout android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner">
        <com.example.cpu11341_local.talktvhome.myview.TalkTextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Nhắc nhở"
            android:textColor="#000000"
            android:textSize="20dp"/>

        <com.example.cpu11341_local.talktvhome.myview.TalkTextView
            android:id="@+id/textViewEventDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hôm qua"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/textViewTitle"/>

        <com.example.cpu11341_local.talktvhome.myview.TalkTextView
            android:id="@+id/textViewDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:textSize="15dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/textViewEventDateTime"/>

        <View
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:background="#000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/textViewDes"/>

        <com.example.cpu11341_local.talktvhome.myview.TalkTextView
            android:id="@+id/textViewViewDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xem chi tiết"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/line"
            android:drawableRight="@drawable/ic_chevron_right"/>

    </RelativeLayout>
</LinearLayout>